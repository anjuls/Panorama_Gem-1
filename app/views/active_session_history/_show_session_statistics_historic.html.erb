<% @update_area = get_unique_area_id %>
<%= my_ajax_form_tag url_for(:controller=>:active_session_history, :action=>:list_session_statistic_historic, :update_area=>@update_area) do %>
  <div>
    <b>Session-Statistics aus DBA_Hist_Active_Sess_History und gv$Active_Session_History</b>
  </div>

  <%= include_start_end_timepicker %>

  <div class="float_left" title="Idle-Waits (z.B. PX Deq Credit: send blkd) in Betrachtung berÃ¼cksichtigen?">
    Idle-Waits
    <%= check_box_tag(:idle_waits, 1, false) %>
  </div>

  <div class="float_left" title="Filter on RAC-Instance (optional)">
    Instance
    <%= text_field_tag(:instance, "", :size=>1) %>
  </div>

  <div class="float_left" title="<%= t(:grouping_hint, :default=>'Group listing by attribute') %>">
    <%= t(:grouping, :default=>'Grouping')%>
      <select name="groupby">
        <% session_statistics_key_rules.each do |key, value| %>
          <%=  "<option value='#{key}' #{"selected='selected'" if key=="Event"}>#{key}</option>".html_safe %>
        <% end %>
      </select>
  </div>

  <div class="float_left" title="optional additional Filter on Session-ID, Module, Action, Program or Machine (like-comparison and case ignored)">
    Filter
    <%= text_field_tag(:filter, "", :size=>10) %>
  </div>

  <div class="float_left">
    <%= submit_tag("Waits anzeigen", :title => "Anlistung der verdichteten Session-Waits") %>
  </div>
<% end %>
<div id="<%= @update_area %>" style="clear: both; width:100%; ">
</div>

