<%= my_ajax_form_tag url_for(:action => "find_dependencies", :username => @username) do %>
  <%=@username%>.
  <%= collection_select(:all_table, :table_name, @all_tables, :table_name, :table_name, {}, 
                        :title=>"Ausahl der Tabelle deren abhängige Tabellen gesucht werden") %>        
  <%= collection_select(:filter_user, :username, @filter_users, :username, :username, {}, 
                        :title=>"Eingrenzung der Ergebnis-Suche auf folgendes Schema") %>        
  <%= submit_tag("Abhängigkeiten anzeigen", :title => "Anzeige der Abhängigkeiten") %>

<% end %>
