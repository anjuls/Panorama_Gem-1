<% @update_area = get_unique_area_id %>
<%= my_ajax_form_tag url_for(:controller=>:dba_sga, :action=>:list_db_cache_content, :update_area=>@update_area) do %>
  <div class="float_left">
    <b>DB-Cache-Nutzung</b>
  </div>
  <div class="float_left">
    Instance
    <%= text_field_tag(:instance, "1", :size=>1, :title=>"ID der betrachteten RAC-Instanz") %>
  </div>
  <div class="float_left">
    Part.
    <%= check_box_tag(:show_partitions, 1, true, :title=>"Partitionsdetails anzeigen") %>
  </div>
  <div class="float_left">
  <%= submit_tag("Cache-Inhalt anzeigen", :title => "Anlistung der Daten des DB-Cache") %>
  </div>
<% end %>
<div id="<%= @update_area %>" style="float:left; width:100%; ">

</div>
