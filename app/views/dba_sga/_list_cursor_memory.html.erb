PGA-Workarea aus GV$SQL_Workarea für Instance=<%= @instance %>, SQL-ID='<%= @sql_id %>' (<%= @workareas.length %> Records)
<%=  @update_area="list_cursor_memory_#{session[:request_counter]}" %>
  <table class="tablesorter" style="font-size:small;">
    <thead>
    <tr>
      <th  title="SQL-ID des Statements">SQL-ID</th>
      <th  title="Child-Number des Statements">Child no.</th>
      <th  title="Operation-Type">Op-Type</th>
      <th  title="Operation-ID des Workareas zur Referenz in Explain-Plan">Op-ID</th>
      <th  title="Sizing-Policy des Workareas">Pol.</th>
      <th  title="Estimated size required by this work area to execute the
 operation completely in memory (optimal execution).
 Derived from either optimizer statistics or previous executions.">Est.Opt.Size</th>
      <th  title="Estimated size required by this work area
 to execute the operation in a single pass.
 Derived from either optimizer statistics or previous executions.">Est.Onep.Size</th>
      <th  title="Memory used by this work area during the last execution of the cursor">Last Mem.Used</th>
      <th  title="Indicates whether this work area runs using OPTIMAL, ONE PASS, or ONE PASS memory requirement (or MULTI-PASS), during the last execution of the cursor">Last Exec.</th>
      <th  title="Degree of parallelism used during the last execution of this operation">Last Degr.</th>
      <th  title="Number of times this work area was active">Total Execs</th>
      <th  title="Number of times this work area ran in optimal mode">Opt.Execs</th>
      <th  title="Number of times this work area ran in one-pass mode">Onep.Execs</th>
      <th  title="Number of times this work area ran below the one-pass memory requirement">Multp.Execs</th>
      <th  title="Average time this work area is active (in hundredths of a second)">Active Time</th>
      <th  title="Maximum temporary segment size (in bytes) created by an instantiation of this work area. This column is null if this work area has never spilled to disk.">Max. Temp</th>
      <th  title="Temporary segment size (in bytes) created in the last instantiation of this work area. This column is null if the last instantiation of this work area did not spill to disk.">Last Temp</th>
    </tr>
    </thead>
    <tbody>
     <% @workareas.each do |o| %>
       <tr>
         <td title="<%= "Child_Number=#{o.child_number}"  %> "><%=
          my_ajax_link_to(o.sql_id,
          url_for( :controller        => "dba_sga",
                   :action            => "list_sql_detail_sql_id_childno",
                   :update_area       => @update_area,
                   :instance          => @instance,
                   :sql_id            => o.sql_id,
                   :child_number      => o.child_number
                 ),
           :title => "Anzeige ausgeführtes SQL-Statement"
           )
         %></td>
         <td><%= o.child_number %> </td>
         <td><%= o.operation_type %> </td>
         <td><%= o.operation_id %> </td>
         <td><%= o.policy %> </td>
         <td align="right"><%= formattedNumber(o.estimated_optimal_size) %> </td>
         <td align="right"><%= formattedNumber(o.estimated_onepass_size) %> </td>
         <td align="right"><%= formattedNumber(o.last_memory_used) %> </td>
         <td><%= o.last_execution %> </td>
         <td align="right"><%= formattedNumber(o.last_degree) %> </td>
         <td align="right"><%= formattedNumber(o.total_executions) %> </td>
         <td align="right"><%= formattedNumber(o.optimal_executions) %> </td>
         <td><%= formattedNumber(o.onepass_executions) %> </td>
         <td><%= formattedNumber(o.multipasses_executions) %> </td>
         <td><%= formattedNumber(o.active_time) %> </td>
         <td><%= formattedNumber(o.max_tempseg_size) %> </td>
         <td><%= formattedNumber(o.last_tempseg_size) %> </td>
       </tr>
     <% end %>
    </tbody>
  </table>
<div id="<%= @update_area %>"></div>
