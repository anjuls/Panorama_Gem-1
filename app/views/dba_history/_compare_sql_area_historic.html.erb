<div class="page_caption">Vergleich der Laufzeiten von Statements zweier Tage aus DBA_Hist_SQLStat</div>

<%= my_ajax_form_tag "dba_history/list_compare_sql_area_historic" do %>
  <div class="float_left">
    <%= label_tag(:minProzDiff, "Laufzeitdiff >", :title => "Laufzeitz am Tag 2 mindestens x % größer") %>
    <%= text_field_tag(:minProzDiff, "50", :size=>2, :title => "Laufzeitz am Tag 2 mindestens x % größer") %>
    %
  </div>
  <div class="float_left">
    Tag 1
    <%= text_field_tag(:tag1, localeDateTime(Date.today, :days), :size=>8, :title => "Erster Tag des Vergleiches im Format '#{human_datetime_day_mask}'") %>
  </div>
  <div class="float_left">
    Tag 2
    <%= text_field_tag(:tag2, localeDateTime(Date.today, :days), :size=>8, :title => "Zweiter Tag des Vergleiches im Format '#{human_datetime_day_mask}'") %>
  </div>
  <div class="float_left">
    Filter
    <%= text_field_tag(:filter, "", :size=>20, :title=>"Filter-string muss in betrachteten SQL-Statements enthalten sein (wenn belegt)") %>
  </div>
  <div class="float_left" title="<%= t(:instance_optional_filter_hint, :default=>'Filter on specific RAC instance (optional)') %>">
    Instance
    <%= text_field_tag(:instance, read_from_client_info_store(:instance), :size=>1) %>
  </div>
  <div class="float_left" title="<%= t(:sqlid_optional_filter_hint, :default=>'Filter on specific SQL-ID (optional)') %>">
    SQL-ID
    <%= text_field_tag(:sql_id, "", :size=>12) %>
  </div>
  <div class="float_left">
  <%= submit_tag("Show SQL", :title => "Show SQL-statements") %>
  </div>
<% end %>

<div id="compare_sql_area_historic_area" style="float:left; width:100%;">
</div>
